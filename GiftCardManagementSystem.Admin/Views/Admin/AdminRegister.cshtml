@model GiftCardManagementSystem.Admin.Models.Admin.AdminUserResponseModel

@{
    ViewData["Title"] = "AdminRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AdminRegister</h1>

@using (Html.BeginForm("Admin", "AdminRegister", FormMethod.Post))
{
    <div>
        @Html.TextBoxFor(m => m.UserName, new { @placeholder = "User Name", @onfocus = "this.placeholder = ''", @onblur = "this.placeholder = 'User Name'" })
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
    </div>
    <div>
        @Html.TextBoxFor(m => m.Password, new { @placeholder = "User Name", @onfocus = "this.placeholder = ''", @onblur = "this.placeholder = 'User Name'" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        @* <label for="password">Password:</label>
        <input type="password" name="password" id="password" required /> *@
    </div>
    <input type="submit" value="Register" class="login-btn" />
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p>@ViewBag.ErrorMessage</p>
}



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

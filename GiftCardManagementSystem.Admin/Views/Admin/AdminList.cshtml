@model GiftCardManagementSystem.Admin.Models.Admin.AdminUserResponseModel
@{
    int counter = 0;
}

<h2 class="mb-4">GiftCard List</h2>

@Html.ActionLink("Create", "AdminRegister", "Admin", null, new { @class = "btn btn-primary" })
<br />
<br />

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>No</th>
                <th>User Name</th>
                <th>User Role</th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.AdminList != null)
            {
                @foreach (var user in Model.AdminList)
                {
                    counter++;

                    <tr>
                        <td> @counter </td>
                        <td>@user.UserName</td>
                        <td>@user.Role</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>